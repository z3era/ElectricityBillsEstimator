<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtDetailTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bill Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtDetailMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month:"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtDetailTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtDetailUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit Used:"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtDetailMonth"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtDetailTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Charges:"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtDetailUnit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtDetailRebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rebate:"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtDetailTotal"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtDetailFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Cost:"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtDetailRebate"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
